<h1>Show Task</h1>

<h2><%= @task.title  %></h2>
<p> <%= @task.details %></p>

<% if @task.completed %>
  <input type="checkbox" name="" id="" disabled checked>
<% else %>
  <input type="checkbox" name="" id="" disabled>
<% end %>

<br>
<br>
<%= link_to "Edit a task", edit_task_path(@task.id)%>
<br>
<br>
<%= link_to "Back to list", tasks_path %>
